<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/send"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:text="添加一条弹幕"/>

    <Button
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:text="刷新"/>

    <Button
        android:id="@+id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:text="list"/>

    <com.sososeen09.library.BarrageView
        android:id="@+id/barrageView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_above="@+id/send"
        app:allow_repeat="true"
        app:border_color="@color/colorAccent"
        app:line_height="20dp"
        app:max_text_size="10sp"
        app:min_text_size="10sp"
        app:random_color="false"
        app:size="200"
        app:text_bottom_padding="2dp"
        app:text_left_padding="10dp"
        app:text_right_padding="10dp"
        app:text_top_padding="2dp"/>


</LinearLayout>
