<?xml version="1.0" encoding="utf-8" ?>
<resources>

    <declare-styleable name="BarrageView">
        <attr name="size" format="integer"/>
        <attr name="text_left_padding" format="dimension"/>
        <attr name="text_right_padding" format="dimension"/>
        <attr name="text_top_padding" format="dimension"/>
        <attr name="text_bottom_padding" format="dimension"/>
        <attr name="max_text_size" format="dimension"/>
        <attr name="min_text_size" format="dimension"/>
        <attr name="line_height" format="dimension"/>
        <attr name="border_color" format="color"/>
        <attr name="random_color" format="boolean"/>
        <attr name="allow_repeat" format="boolean"/>
        <!--速度，默认的是对应的是一个屏幕宽度是3000秒-->
        <attr name="duration" format="integer"/>
    </declare-styleable>

</resources>